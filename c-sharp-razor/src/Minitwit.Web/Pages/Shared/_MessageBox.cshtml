@model Minitwit.Web.Pages.Shared.MessageBoxModel

<div class="Messagebox">
    <h3>What's on your mind @(User.Identity?.Name)?</h3>
    <form method="post" asp-page-handler="CreateMessage" asp-page="/MyTimeline">
        <input class="form-control" id="text" name="text" value="@Model.MessageText" />
        <span asp-validation-for="MessageText" style="display: flex; color: red;"></span>
        <input type="submit" value="Share" style="margin: 10px 0" />
    </form>
</div>
